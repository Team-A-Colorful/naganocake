<div class='container'>
<div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">

  <div class="py-4">
    <h4 class="bg-light">注文履歴一覧</h4>
  </div>
  
  <table class="table">
  <thead class="thead-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
      <td><%= "#{order.customer.first_name}"+"#{order.customer.last_name}" %></td>
      <td>!!</td>
      <td><%=order.order_status %></td>
    </tr>
   <%end%>
   <%= paginate @orders, theme: 'bootstrap-5' %>
  </tbody>
</table>



</div>
</div>
</div>