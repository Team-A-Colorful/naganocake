<div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th style="width: 15%">商品ID</th>
            <th style="width: 25%">商品名</th>
            <th style="width: 20%">税抜価格</th>
            <th style="width: 20%">ジャンル</th>
            <th style="width: 20%">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% items.each do |item| %>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to item.name, admin_item_path(item) %>
              </td>
              <td>
                <%= item.price.to_s(:delimited) %>
              </td>
              <td>
                <%= item.genre.name %>
              </td>
              <td>
                <%= item.sale_status ? '販売中' : '販売停止中' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>