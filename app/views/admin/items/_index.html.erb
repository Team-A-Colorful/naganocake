<div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <table class="table table-hover">
        <thead class="table-active">
          <tr>
            <th style="width: 15%">商品ID</th>
            <th style="width: 25%">商品名</th>
            <th style="width: 20%">税抜価格</th>
            <th style="width: 20%">ジャンル</th>
            <th style="width: 20%">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% items.each do |item| %>
            <tr class="tr-color items-index-tr", data-href="/admin/items/<%= item.id%>">
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= item.name %>
              </td>
              <td>
                <%= item.price.to_s(:delimited) %>
              </td>
              <td>
                <%= item.genre.name %>
              </td>
              <td>
                <%= item.sale_status ? '販売中' : '販売停止中' %>
              </td>
            </tr>
          <% end %>
          <%= paginate items, theme: 'bootstrap-5' %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  jQuery(document).on("turbolinks:load", function() {
  $(".items-index-tr").on('click', function() {
      window.location = $(this).data("href");
  });
});
</script>