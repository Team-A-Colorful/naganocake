<div class="container">
  <h2>商品編集</h2>
  <div class="row">
    <div>
      <%= form_with model: @item, url: admin_item_path, method: :patch, local: true do |f| %>
        <div class="form-group form-inline">
          <%= f.label "商品画像" %>
          <%= f.file_field :image %>
        </div>
        <div class="form-group form-inline">
          <%= f.label "商品名" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group form-inline">
          <%= f.label "商品説明" %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div class="form-group form-inline">
          <%= f.label "ジャンル" %>
          <%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "--選択してください--"} %>
        </div>
        <div class="form-group form-inline">
          <%= f.label "価格(税抜)" %>
          <%= f.text_field :price, class: 'form-control' %>
        </div>
        <div class="form-group form-inline">
          <%= f.label "販売ステータス" %>
          <%= f.radio_button :sale_status, :true %>
          <%= f.label :sale_status, "販売中" %>
          <%= f.radio_button :sale_status, :false %>
          <%= f.label :sale_status, "販売停止中" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>