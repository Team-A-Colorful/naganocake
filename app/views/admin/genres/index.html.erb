<div class="container">
  <div class="row">
    <div class="col-8 off-set-4" >
      <h2 class="m-5">ジャンル一覧・追加</h2>
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
        <div class="form-group mb-5">
          <div class="form-inline">
            <%= f.label "ジャンル名", class: 'mr-3' %>
            <%= f.text_field :name, :placeholder => "ジャンル名", class: 'form-control mr-3' %>
            <%= f.submit "新規登録", class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success'%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>