<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto d-flex justify-content-between m-5">
      <h5 class="bg-light d-flex align-items-center pr-3 pl-3">ジャンル編集</h5>
    </div>
    <%= form_with model: @genre, url: admin_genre_path, method: :patch, local:true do |f| %>
      <div class="form-group mb-5">
        <% if @genre.errors.any? %>
         <%= render 'layouts/error_messages', model: @genre %>
        <%end%>
        <div class="form-inline">
          <%= f.label "ジャンル名", class: 'mr-3' %>
          <%= f.text_field :name, :placeholder => "ジャンル名", class: 'form-control mr-3' %>
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>