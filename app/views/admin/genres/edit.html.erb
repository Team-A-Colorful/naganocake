<div class="container">
  <div class="row">
    <div class="col-8 off-set-4" >
    <h2 class="m-5">ジャンル編集</h2>
    <%= form_with model: @genre, url: admin_genre_path, method: :patch, local:true do |f| %>
      <div class="form-group mb-5">
        <div class="form-inline">
          <%= f.label "ジャンル名", class: 'mr-3' %>
          <%= f.text_field :name, :placeholder => "ジャンル名", class: 'form-control mr-3' %>
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>