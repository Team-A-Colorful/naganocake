<div class="container">
  <div class="text-success">
    <%= flash[:notice] %>
  </div>
  <div class="text-danger">
    <%= flash[:alret] %>
  </div>
  <div class="col pt-3">
    <h4>注文履歴詳細画面</h4>
  </div>
  <div class="col">
    <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
      <table class="table">
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.first_name %><%= @order.customer.last_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.delivery_post_code %>
            <%= @order.delivery_address %><br>
            <%= @order.delivery_address_label %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.pay_option_i18n if @order.pay_option.present? %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= f.select :order_status, Order.order_statuses_i18n.invert %>
            <%= f.submit "更新", class: "btn btn-sm btn-success" %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
  <div class="row">
    <div class="col-8 mt-3">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @total = 0 %>
          <% @order_items.each do |order_item| %>
          <% @total += order_item.item.add_tax_sales_price*order_item.count %>
          <%= form_with model: order_item, url: admin_order_item_path(order_item.id) , method: :patch , local: true do |f| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.item.add_tax_sales_price %>円</td>
              <td><%= order_item.count %></td>
              <% subtotal = order_item.item.add_tax_sales_price*order_item.count %>
              <td><%= subtotal %>円</td>
              <td>
                <%= f.select :work_status, OrderItem.work_statuses_i18n.invert %>
                <%= f.submit "更新", class: "btn btn-sm btn-success" %>
              </td>
            </tr>
            <% end %>
            <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3 offset-1 mt-3">
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= @total %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.shipping_fee %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @total + @order.shipping_fee %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>