<div class='container'>
<div class='row pt-4'>
    <h4 class="bg-light"><%= "#{@customer.first_name}"+"#{@customer.last_name}さんの会員詳細" %></h4>
</div>

<div class='row pt-5'>
<div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">

  <table class="table table-borderless">
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= "#{@customer.first_name}"+"#{@customer.last_name}" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= "#{@customer.first_name_kana}"+"#{@customer.last_name_kana}" %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td><% if @customer.membership_status == true %>
            <P>有効</P>
          <% else %>
            <P>退会</P>
          <%end%>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= link_to "編集する", edit_admin_customer_path(@customer),class: "btn btn-success"%>&emsp;
      　　<%= link_to "注文履歴一覧を見る", admin_root_path,class: "btn btn-primary"%>
      </td>
    </tr>

  </tbody>
  </table>



</div>
</div>
</div>