<div class='container'>
<div class='row pt-4'>
    <h4 class="bg-light">会員一覧</h4>
</div>

<div class='row pt-5'>
<div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">

  <table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to "#{customer.first_name}"+"#{customer.last_name}" ,admin_customer_path(customer),class: "text-decoration-none"%></td>
      <td><%= customer.email %></td>
      <td><% if customer.membership_status == true %>
            <P class="text-success">有効</P>
           <% else %>
            <P class="text-danger">退会</P>
           <%end%>
           </td>
    </tr>
   <%end%>
   <%= paginate @customers, theme: 'bootstrap-5' %>
  </tbody>
</table>



</div>
</div>
</div>