<div class='container'>
<div class='row pt-5'>
<div class="col-sm-12 col-md-11 col-lg-10 px-sm-0 mx-auto tr-color p-4">
<div class="ml-2">
    <h4>新規会員登録</h4>
</div>
 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 
 <% if @customer.errors.any? %>
 <%= render 'layouts/error_messages', model: @customer %>
 <%end%>
 
 <div class="form-group ml-2">
  <table class="table table-borderless">
  <tbody>
    <tr>
      <td>名前</td>
      <td>（姓）</td>
      <td><%= f.text_field :first_name,placeholder: "令和",class: 'form-control' %>
      <td>（名）</td>
      <td><%= f.text_field :last_name,placeholder: "道子",class: 'form-control' %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>（セイ）</td>
      <td><%= f.text_field :first_name_kana ,placeholder: "レイワ",class: 'form-control' %>
      <td>(メイ)</td>
      <td><%= f.text_field :last_name_kana,placeholder: "ミチコ",class: 'form-control' %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td></td>
      <td> <%= f.email_field :email,placeholder: "sample@example.com",class: 'form-control' %> </td>
    </tr>
    <tr>
      <td>郵便番号（ハイフンなし）</td>
      <td></td>
      <td><%= f.text_field :post_code ,placeholder: "0000000",class: 'form-control' %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td></td>
      <td colspan="3"><%= f.text_field :address ,placeholder: "東京都渋谷区代々木神園町0-0",class: 'form-control' %></td>
    </tr>
    <tr>
      <td>電話番号（ハイフンなし）</td>
      <td></td>
      <td><%= f.text_field :telephone_number ,placeholder: "00000000000",class: 'form-control' %></td>
    </tr>
    <tr>
      <td>パスワード（６文字以上)</td>
      <td></td>
      <td><%= f.password_field :password, autocomplete: "new-password",class: 'form-control' %></td>
    </tr>
    <tr>
      <td>パスワード（確認用）</td>
      <td></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td><%= f.submit "新規登録",class: "btn btn-outline-success px-5"%></td>
    </tr>

  </tbody>
  </table>
</div>
<%end%>

<div class="py-1 mx-4"><h6 "bg-light">既に登録済みの方</h6></div>
<div class="px-5"><small><%= link_to "こちら",new_customer_session_path %>からログインしてください</div>

</div>
</div>
</div>