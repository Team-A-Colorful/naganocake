<div class="container">
  <div class="col-md-10 offset-md-2">
    <h4 class="mt-3">情報入力確認</h4>
  </div>
    <div class="row">
      <div class="col-md-8">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <% total = 0 %>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td>
                  <%= image_tag 'no_image.jpg' %>
                  <%= cart_item.item.name %>
                </td>
                <td><%= (cart_item.item.price*1.1).to_i %></td>
                <td><%= cart_item.count %></td>
                <% subtotal = ((cart_item.item.price*cart_item.count)*1.1).to_i %>
                <td><%= subtotal %></td>
              </tr>
              <% total += (cart_item.item.price*cart_item.count)*1.1 %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-3 offset-md-1">
        <table class="table table-bordered">
          <tr>
            <th>送料</th>
            <% @order.shipping_fee = 800 %>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= total.to_i %></td>
            </tr>
          <tr>
            <th>請求金額</th>
            <% @order.total_price = @order.shipping_fee + total.to_i %>
            <td><%= @order.total_price %></td>
          </tr>
        </table>
      </div>
    </div>
    <table>
      <tr>
        <th>支払方法</th>
        <td><%= params[:order][:pay_option] %></td>
      </tr>
      <tr>
        <th>お届け先</th>
        <td>〒<%= @order.delivery_post_code %></td>
        <td><%= @order.delivery_address %></td>
        <td><%= @order.delivery_address_label %></td>
      </tr>
    </table>
    <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
     <%= f.hidden_field :customer_id, value: current_customer.id %>
     <%= f.hidden_field :shipping_fee %>
     <%= f.hidden_field :total_price %>
     <%= f.hidden_field :pay_option %>
     <%= f.hidden_field :delivery_address_label %>
     <%= f.hidden_field :delivery_address %>
     <%= f.hidden_field :delivery_post_code %>
     <%= f.hidden_field :order_status, {value: "入金待ち"} %>
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
   <% end %>
</div>