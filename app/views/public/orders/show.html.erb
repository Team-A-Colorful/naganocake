<div class="container">
  <div class="col-10 offset-1 pt-3">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
    <div class="col-8 mt-3">
      <h6>注文情報</h6>
      <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
        <table class="table table-bordered">
            <th class="table-active">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="table-active">配送先</th>
            <td>〒<%= @order.delivery_post_code %>
              <%= @order.delivery_address %><br>
              <%= @order.delivery_address_label %>
            </td>
          </tr>
          <tr>
            <th class="table-active">支払方法</th>
            <td><%= @order.pay_option_i18n if @order.pay_option.present? %></td>
          </tr>
          <tr>
            <th class="table-active">注文ステータス</th>
            <td>
              <%= @order.order_status_i18n %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
    <div class="col-3 offset-1 mt-3">
      <h6>請求情報</h6>
      <table class="table table-bordered">
        <tr>
          <th class="table-active">商品合計</th>
          <td><%= @order.order_items.sum { |item| item.order_price * item.count } %>円</td>
        </tr>
        <tr>
          <th class="table-active">送料</th>
          <td><%= @order.shipping_fee %>円</td>
        </tr>
        <tr>
          <th class="table-active">請求金額合計</th>
          <td><%= @order.total_price %>円</td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mt-3">
      <h6>注文内容</h6>
      <table class="table table-bordered">
          <thead>
            <tr class="table-active">
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order_items.each do |order_item| %>
            <%= form_with model: order_item, url: admin_order_item_path(order_item.id) , method: :patch , local: true do |f| %>
              <tr>
                <td><%= order_item.item.name %></td>
                <td><%= order_item.item.add_tax_sales_price %>円</td>
                <td><%= order_item.count %></td>
                <% subtotal = order_item.item.add_tax_sales_price*order_item.count %>
                <td><%= subtotal %>円</td>
              </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>