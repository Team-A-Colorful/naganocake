<div class="cntainer">
  <h2>ショッピングカート</h2>
  <%= link_to "カートを空にする", cart_item_destroy_all_path(@cart_items), method: :delete, class: 'btn btn-danger' %>
  <div class="row">
    <div class="col-10 off-set-2">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image,format: 'jpeg', size: "100x50" %>
              </td>
              <td>
                <%= cart_item.item.name %>
              </td>
              <td>
                <%= cart_item.item.add_tax_sales_price.to_s(:delimited) %>
              </td>
              <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                  <%= f.hidden_field :item_id, value: cart_item.item.id %>
                  <%= f.hidden_field :customer_id, value: current_customer.id %>
                  <%= f.select :count, *[1..100] %>
                  <%= f.submit "変更", class: 'btn btn-success' %>
                <% end %>
              </td>
              <td>
                <%= link_to "削除", cart_item_path(cart_item), method: :delete, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "買い物を続ける", items_path, class: 'btn btn-primary' %>
      <div>
        合計金額
        <%= @total.to_s(:delimited) %>円
      </div>
    </div>
  </div>
</div>