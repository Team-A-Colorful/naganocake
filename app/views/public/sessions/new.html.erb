<div class='container'>
<div class='row pt-5'>
  
  <div class='login-flash-message'>
     <%= flash[:alert] %>
  </div>
  
<div class="col-sm-12 col-md-9 col-lg-9 px-sm-0 mx-auto tr-color p-3">
  <div class='pb-3 px-2'>
    <h4>ログイン</h4>
  </div>

  <div class="py-1 px-3">
     <p "bg-light">会員の方はこちらからログイン</p>
  </div>

  <div class="px-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
      <table class="table table-borderless px-5">
      <tbody>
        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, class: 'form-control'%></td>
        </tr>
        <tr>
          <td><%= f.label :パスワード %></td>
          <td><%= f.password_field :password, class: 'form-control'%></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "ログイン", class: 'btn btn-outline-primary px-5' %></td>
        </tr>
      </tbody>
      </table>
      </div>
    <% end %>
  </div>

<div class="py-1 px-2"><h6>会員登録がお済みでない方</h6></div>
<div class="px-5"><small><%= link_to "こちら",new_customer_registration_path %>から新規登録を行ってください</small></div>

</div>
</div>
</div>

