<% if customer_signed_in? %>
  <div>
    <%= form_with url: search_path, local: true, method: :get do |f| %>
    <div class="searchform">
      <%= f.text_field :name, placeholder: "Search" %>
      <%= button_tag :type => "submit", :class =>"btn" do %>
        <i class="fa fa-search"></i>
      <% end %>
    </div>
    <% end %>
  </div>
<% end %>