<div class="container">
  <div class="row">
    <%= render 'public/items/list', genres: @genres %>
    <div class="col-md-9 offset-md-1 mt-5">
      <div>
        <div class="d-flex align-items-end mb-3">
          <h2 class="m-0">検索結果</h2>
          <span class="ml-3">(全<%= @items.count %>件)</sapn>
        </div>
        <%= paginate @items, theme: 'bootstrap-5' %>
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
            <div class="col-3">
              <%= link_to item_path(item) do %>
                <div class="card mb-4 text-dark tr-color h-100">
                  <%= attachment_image_tag item, :image,:fill, 175, 150, format: 'jpeg', class: "card-img-top" %>
                  <div class="card-body">
                    <p class="card-title text-truncate"><%= item.name %></p>
                    <p class="card-text text-truncate">¥<%= item.add_tax_sales_price.to_s(:delimited) %></p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>