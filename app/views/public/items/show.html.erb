<div class="container">
  <div class="row">
    <%= render 'list', genres: @genres %>
    <div class="col-md-4 offset-md-1 d-flex align-items-center">
      <%= attachment_image_tag @item, :image,format: 'jpeg', size: "300x200", class: 'd-block mx-auto' %>
    </div>
    <div class="col-md-4 d-flex align-items-center">
      <div>
        <h2>
          <%= @item.name %>
        </h2>
        <p>
          <%= @item.introduction %>
        </p>
        <h3>
          ¥ <%= @item.add_tax_sales_price.to_s(:delimited) %> (税込)
        </h3>
        <br>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%if customer_signed_in?%>
            <%= f.hidden_field :customer_id, value: current_customer.id %>
          <%end%>
            <%= f.select :count, *[1..100], { include_blank: '個数選択', selected: '個数選択'} %>
          <%= f.submit "カートに入れる", class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>