<div class="container">
  <div class="row">
    <%= render 'list', genres: @genres %>
    <div class="col-md-8 offset-md-1">
      <div>
        <h2>商品一覧</h2>
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
            <div class="col-3">
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag item, :image,format: 'jpeg', size: "150x100" %>
                <br>
                <%= item.name %>
                <br>
                ¥<%= item.add_tax_sales_price.to_s(:delimited) %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>