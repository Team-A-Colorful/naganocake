<div class="container">
  <h2>商品一覧</h2>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-3">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image,format: 'jpeg', size: "200x100" %>
          <br>
          <%= item.name %>
          <br>
          ¥<%= item.add_tax_sales_price.to_s(:delimited) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>