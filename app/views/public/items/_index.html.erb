<%= paginate items, theme: 'bootstrap-5' %>
<div class="d-flex flex-wrap ">
  <% items.each do |item| %>

  <div class="col-3 my-2">
    <%= link_to item_path(item) do %>
      <div class="card text-dark tr-color h-100">
        <%= attachment_image_tag item, :image,:fill, 175, 150, format: 'jpeg', class: "card-img-top"%>
        <div class="card-body">
          <p class="card-title text-truncate"><%= item.name %></p>
          <p class="card-text text-truncate"> Â¥<%= item.add_tax_sales_price.to_s(:delimited) %></p>
        </div>
      </div>
    <% end %>
  </div>

  <% end %>
</div>